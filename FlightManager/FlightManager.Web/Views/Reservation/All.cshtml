@using FlightManager.Common
@model FlightManager.Web.ViewModels.Reservation.ListingPageViewModel
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">All Reservations</h1>
        <div style="padding: 5%;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Second Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">EGN</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Nationality</th>
                        <th scope="col">Ticket Type</th>
                        <th scope="col">Ticket Count</th>
                        <th scope="col">Is Confirmed</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Reservations.Count; i++)
                    {
                    <tr>
                        <th scope="row">@Model.Reservations[i].FirstName</th>
                        <td>@Model.Reservations[i].SecondName</td>
                        <td>@Model.Reservations[i].LastName</td>
                        <td>@Model.Reservations[i].Email</td>
                        <td>@Model.Reservations[i].EGN</td>
                        <td>@Model.Reservations[i].PhoneNumber</td>
                        <td>@Model.Reservations[i].Nationality</td>
                        <td>@Model.Reservations[i].TicketType</td>
                        <td>@Model.Reservations[i].TicketsCount</td>
                        <td>@Model.Reservations[i].IsConfirmed</td>
                        @if (@Model.Reservations[i].IsConfirmed == false)
                        {
                            <td>
                                <div class="button-holder">
                                    <a href="/Reservation/Delete?id=@Model.Reservations[i].Id" class="btn btn-danger text-uppercase">Delete</a>
                                </div>
                            </td>
                        }
                    </tr>
                    }

                </tbody>

            </table>
            <div class="d-flex flex-wrap align-items-center">
                <div class="pagination mx-auto">
                    @{
                        var prevPage = Model.CurrentPage - 1;
                        var nextPage = Model.CurrentPage + 1;
                    }
                    @if (Model.CurrentPage != 1)
                    {
                        <a href="/Reservation/All?page=@prevPage" class="btn btn-primary prev-arrow mx-1"><i class="fas fa-arrow-left"></i></a>
                    }

                    @for (var j = 1; j <= (Model.TotalReservationsCount / GlobalConstants.ReservationsPerPage) + 1; j++)
                    {
                        @if (j == Model.CurrentPage)
                        {
                            <a class="btn btn-primary active mx-1" href="/Reservation/All?page=@j">@j</a>
                        }
                        else if (j >= Model.CurrentPage - 4 && (j <= Model.CurrentPage + 4 && j <= Model.LastPage))
                        {
                            <a href="/Reservation/All?page=@j" class="btn mx-1">@j</a>
                        }
                    }

                    @if (Model.CurrentPage != Model.LastPage)
                    {
                        <a href="/Reservation/All?page=@nextPage" class="btn btn-primary next-arrow mx-1"><i class="fas fa-arrow-right"></i></a>
                    }

                </div>
            </div>
        </div>
    </div>
</section>